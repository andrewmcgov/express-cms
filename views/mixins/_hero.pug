mixin hero()
  div(class="hero")
    - const featuredImage = settings.featuredImage ? `/uploads/${settings.featuredImage}` : 'https://images.unsplash.com/photo-1496582490020-60c1344c64aa?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=cb806e3f9bae6cf63ce928b4f137f52d&auto=format&fit=crop&w=1359&q=80'

    img(class="hero__image" src="https://images.unsplash.com/photo-1496582490020-60c1344c64aa?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=cb806e3f9bae6cf63ce928b4f137f52d&auto=format&fit=crop&w=1359&q=80")

    div(class="hero__blocks")
      div(class="hero-blocks__border")

    div(class="hero__blocks")
      div(class="hero-blocks__solid-block")
        h4(class="hero--blocks__solid-text") A lightweight blog CMS
      

    div(class="hero__text")
      h1(class="hero__heading") Featherweight CMS
    

