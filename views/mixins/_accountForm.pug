mixin accountForm(admin = {}, action = '')
  div(class='grid-container')
    - if(action === 'register'){var actionURL = 'register'} else {var actionURL = 'account/edit'}
    form(class='grid-x grid-margin-x' action=`/admin/${actionURL}` method="POST")
      div(class='cell small-12 medium-6 large-6')
        label(for="name") First name
        input(type="text" name="firstName" value=(admin.firstName) required)
      div(class='cell small-12 medium-6 large-6')
        label(for="name") Last Name
        input(type="text" name="lastName" value=(admin.lastName) required)
      div(class='cell')
        label(for="email") Email
        input(type="email" name="email" value=(admin.email) required)
        - var action = action || 'test'
        if(action === 'register')
            label(for="password") Password
            input(type="password" name="password" required)
            label(for="password-confirm") Confirm Password
            input(type="password" name="password-confirm" required)
        input.button(type="submit" value="Register â†’")